<input type="checkbox" hidden name="" id="input-modal-login-admin">
<div class="modal-login">
    <button onclick="hiddenModalAdmin()"></button>
</div>

<div id="formLog" class="modal-container modal-signin-admin">
    <div class="modal-container-logo">
        <i class="fa-solid fa-circle-user"></i>
        <p href="#" class="text-login">ĐĂNG NHẬP</p>
    </div>
    <div class="modal-container-detail">
        <div class="detail-login login">
            <span>Đăng nhập</span>
        </div>
        <label for="input-modal-login-admin" class="btn-close" onclick="hiddenModalAdmin()">
            <i class="fa-solid fa-xmark"></i>
        </label>
        <form action="/admin" method="post">
            <input type="text" name="username" id="username" placeholder="Tài khoản" class="control-form">
            <input type="password" name="password" placeholder="Mật khẩu" class="control-form">
            <div class="signin-container">
                <div class="button-submit">
                    <button class="btn btn-success" type="submit">
                        <span>Đăng nhập</span> 
                    </button>    
                </div>
                <div class="forget-password">
                    <a href="#">Quên mật khẩu?</a>   
                </div>
            </div>
        </form>
    </div>
</div>

