<header id="header">
    <div class="content-section b-color">
        <nav class="row navbar d-flex">
            <div class="header-logo pointer">
                <img src="../../public/img/logo_page2.JPG" alt="" class="width-100 height-100">
            </div>
            <ul class="navbar-list list-1">
                <li class="navbar-item navbar-item-separate">
                    <i class="fa-solid fa-book-open"></i>
                    <a href="#">Trang chủ</a>
                </li>
                <li class="connect-tag">
                    <span class="connect-tag-item">Kết nối</span>
                    <a href="#" class="connect-tag-icon connect-tag-icon-fb">
                        <i class="fa-brands fa-facebook"></i>
                        <div class="connect_qr_code_fb">
                            <img src="../../public/img/qr_code.jpg" alt="QR Code" class="qr_img_fb">
                        </div>
                    </a>
                    <a href="#" class="connect-tag-icon connect-tag-icon-gh">
                        <i class="fa-brands fa-github"></i>
                        <div class="connect_qr_code_gh">
                            <img src="../../public/img/qr_code_gh.jpg" alt="QR Code" class="qr_img_gh">
                        </div>
                    </a>icon
                </li>
            </ul>
        </nav>
        <div class="row header-content">
            <div class="header-logo-2 pointer">
                <img src="../../public/img/logo_page2.JPG" alt="" class="height-100 width-100">
            </div>
            <label for="input-nav-mobile" class="header-menu pointer">
                <span class="icon-menu" href="#">
                    <i class="fa-solid fa-bars"></i>
                </span>
            </label>
            <input type="checkbox" hidden name="" id="input-nav-mobile">
            <label for="input-nav-mobile" class="nav-overlay"></label>
            <nav class="nav-mobile">
                <label for="input-nav-mobile" class="nav-close">
                    <i class="fa-solid fa-xmark"></i>
                </label>
                <ul class="nav-mobile-list">
                    {{#if lcIsAuthenticatedAdmin}}
                        <li class="nav-mobile-list-nxb show-i">
                            <label for="mobile-admin" class="nav-mobile-link">
                                <i class="fa-solid fa-user icon-admin"></i>
                                <b>Xin chào, {{lcAuthAdmin.username}}!</b>
                                <i class="fa-solid fa-sort-down"></i>
                            </label>
                            <input type="checkbox" hidden id="mobile-admin">
                            <ul class="nav-nxb-list">
                                <li class="nav-nxb-item"><a class="nav-nxb-item-name" href="javascript: $('#formLogoutAdmin').submit();">Đăng xuất</a></li>
                            </ul>
                        </li>
                    {{/if}}
                    <li class="nav-mobile-list-nxb"><a href="/admin" class="nav-mobile-link">Trang quản trị</a></li>
                    <li class="nav-mobile-list-nxb"><a class="nav-mobile-link" href="/admin/employee">Quản lý nhân viên</a></li>
                    <li class="nav-mobile-list-nxb"><a class="nav-mobile-link" href="/admin/user">Quản lý người dùng</a></li>
                    <li class="nav-mobile-list-nxb"><a class="nav-mobile-link" href="/admin/category">Quản lý danh mục</a></li>
                    <li class="nav-mobile-list-nxb"><a class="nav-mobile-link" href="/admin/product">Quản lý sản phẩm</a></li>
                </ul>
            </nav>
            <div class="header-search">
                <input class="" type="text" name="" id="" placeholder="Tìm kiếm">
                <i class="search-btn fa-solid fa-magnifying-glass"></i>
                <div class="history-find">
                    <h4 class="history-find-heading">Lịch sử tìm kiếm</h4>
                    <ul class="history-find-list">
                        <li class="history-find-item">
                            <a href="#">Bút bi</a>
                        </li>
                        <li class="history-find-item">
                            <a href="#">Bút chì</a>
                        </li>
                    </ul>
                </div>
            </div>
            {{#if lcIsAuthenticatedAdmin}}
                <form id="formLogoutAdmin" action="/admin/dang-xuat" method="post"></form>
                <li class="navbar-item show-info info-admin">
                    <i class="fa-solid fa-user icon-admin"></i>
                    <label class="name-admin">
                        <b>Xin chào, {{lcAuthAdmin.username}}!</b>
                        <i class="fa-solid fa-sort-down"></i>
                    </label>
                    <ul>
                        <li><a href="javascript: $('#formLogoutAdmin').submit();">Đăng xuất</a></li>
                    </ul>
                </li>
            {{else}}
                <div class="navbar-list list-2">
                    <div class="navbar-item">
                        <i class="fa-solid fa-user"></i>
                        <label for="input-modal-login-admin" onclick="showFormLoginAdmin()">
                            <b>Đăng nhập</b>
                        </label>
                    </div>
                </div>
                <div class="header-user pointer">
                    <button onclick="showFormLoginAdmin()" class="icon-user">
                        <i class="fa-solid fa-user"></i>
                    </button>
                </div>
            {{/if}}
        </div>
    </div>
</header>