                                        <span>Số lượng<input type="number" id="number" min="1" max="9" step="1" value="1"></span> 
                                    </label>
                                </div>

                                <p class="product-price item-center">
                                    18.750 đ                                 
                                </p>
                                <p class="cancel-product item-center">
                                    <i class="fa-solid fa-trash-can"></i>
                                </p>
                            </li>
                            <div class="border-product"></div>
                        </ul>
                    </a>
                </div>
            </div>
            <div class="basket-container-right">
                <div class="basket-price">
                    <div class="d-flex">
                        <p>Thành tiền</p>
                    </div>
                    <div class="d-flex">
                        <p>VAT</p>
                        <p>5%</p>
                    </div>
                    <div class="border-product"></div>
                    <div class="d-flex">
                        <p><b>Tổng số tiền</b></p>
                    </div>
                    <div><button>Thanh toán</button></div>
                    <div><button>Thanh toán</button></div>
                </div>
            </div>
        </div>
    </div>
</div>

